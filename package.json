{
  "name": "pico-redux",
  "version": "1.2.7",
  "description": "A Pico sized Redux",
  "author": "Joel Thoms",
  "license": "MIT",
  "keywords": [
    "redux",
    "reducer",
    "state",
    "functional",
    "immutable"
  ],
  "main": "index.js",
  "repository": {
    "type": "github",
    "url": "https://github.com/joelnet/pico-redux"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coveralls": "npm run test:coverage -- --coverageReporters=text-lcov | coveralls",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "jest": "^26.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,mjs}",
      "!coverage/**",
      "!changelog.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
